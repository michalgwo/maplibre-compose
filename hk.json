          "check_first": true,
          "batch": false,
          "stomp": false,
          "hide": false,
          "output_summary": "stderr",
          "allow_symlinks": false,
          "env": {},
          "tests": {
            "adds newline": {
              "run": "fix",
              "files": ["{{tmp}}/a.txt"],
              "write": {
                "{{tmp}}/a.txt": "no-newline"
              },
              "env": {},
              "expect": {
                "code": 0,
                "files": {
                  "{{tmp}}/a.txt": "no-newline\n"
                }
              }
            }
          }
        },
        "mixed-line-ending": {
          "_type": "step",
          "glob": "*",
