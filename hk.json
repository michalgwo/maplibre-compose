{
  "min_hk_version": "{{version | truncate(length=1)}}.0.0",
  "display_skip_reasons": ["profile-not-enabled"],
  "warnings": [],
  "hooks": {
    "pre-commit": {
      "fix": true,
      "stash": "git",
      "steps": {
        "trailing-whitespace": {
          "_type": "step",
          "glob": "*",
          "stage": ["*"],
          "exclusive": false,
          "interactive": false,
          "depends": [],
          "check_list_files": "hk util trailing-whitespace {{files}}",
          "fix": "hk util trailing-whitespace --fix {{files}}",
          "check_first": true,
          "batch": false,
          "stomp": false,
          "hide": false,
          "output_summary": "stderr",
          "allow_symlinks": false,
          "env": {},
          "tests": {
            "removes trailing whitespace": {
              "run": "fix",
              "files": ["{{tmp}}/a.txt"],
              "write": {
                "{{tmp}}/a.txt": "trailing  \n"
              },
              "env": {},
              "expect": {
                "code": 0,
                "files": {
                  "{{tmp}}/a.txt": "trailing\n"
                }
              }
            },
            "detects trailing whitespace": {
              "run": "check",
              "files": ["{{tmp}}/a.txt"],
              "write": {
                "{{tmp}}/a.txt": "trailing  \n"
              },
              "env": {},
              "expect": {
                "code": 1,
                "files": {}
              }
            },
            "passes clean files": {
              "run": "check",
              "files": ["{{tmp}}/a.txt"],
              "write": {
                "{{tmp}}/a.txt": "clean\n"
              },
              "env": {},
              "expect": {
                "code": 0,
                "files": {}
              }
            }
          }
        },
        "end-of-file-fixer": {
          "_type": "step",
          "glob": "*",
          "stage": ["*"],
          "exclusive": false,
          "interactive": false,
          "depends": [],
